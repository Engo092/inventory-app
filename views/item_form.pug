extends layout 

block content
    h2= title

    form(method='POST', action='')
        div(class='form-field')
            label(for="name") Name:
            input#name(type='text' placeholder='Instrument name' name='name' value=(undefined === item ? '' : item.name) required='true')

        div(class='form-field')
            label(for="description") Description: 
            textarea#description(type='textarea' placeholder='Item description' name='description' required='true') #{undefined === item ? '' : item.description}

        div(class='form-field')
            label Categories:
            div
                for category in all_categories
                    input(type='checkbox' name='category' id=category._id value=category._id checked=category.checked)
                    label(for=category._id) #{category.title}

        div(class='form-field')
            label(for="price") Price:
            input#price(type='number' placeholder='Price' name='price' value=(undefined === item ? '' : item.price) required='true' min=1 step="0.01" )

        div(class='form-field')
            label(for="number_in_stock") Number in Stock:
            input#number_in_stock(type='number' placeholder='Number in Stock' name='number_in_stock' value=(undefined === item ? '' : item.number_in_stock) required='true' min=0 max=500)

        div(class='form-field')
            label(for="password") Please enter the secret password to proceed.
            input#password(type='password' name='password' required='true')
        button.submit(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li(class='err')!= error.msg